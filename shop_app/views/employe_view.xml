<odoo>
    <data>
      <!-- explicit list view definition -->
  
      <record model="ir.ui.view" id="shop_app.employe_model_list">
        <field name="name">Employe List</field>
        <field name="model">shop_app.employe_model</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"></field>
            <field name="surname"></field>
            <field name="dni"></field>
            <field name="photo" widget="image"></field>
            <field name="phone"></field>
          </tree>
        </field>
      </record>
  
      <!-- Form definition-->
      <record model="ir.ui.view" id="shop_app.employe_model_form">
        <field name="name">Employe Form</field>
        <field name="model">shop_app.employe_model</field>
        <field name="arch" type="xml">
          <form string="Employe">
            <group>
              <field name="name"></field>
              <field name="surname"></field>
              <field name="dni"></field>
              <field name="photo" widget="image"></field>
              <field name="phone"></field>
            </group>
          </form>
        </field>
      </record>
  
      <record model="ir.ui.view" id="shop_app.employe_model_kanban">
        <field name="name">Employe Kanban</field>
        <field name="model">shop_app.employe_model</field>
        <field name="arch" type="xml">
          <kanban class="o_res_partner_kanban">
            <field name="dni" />
            <field name="name" />
            <field name="photo" widget="image"></field>
            <field name="phone" />
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click">
                  <div class="o_kanban_image">
                    <field name="photo" nolabel="1" widget="image" class="oe_right oe_avatar" />
                  </div>
                  <div class="oe_kanban_details">
                    <strong>
                      <field name="name" class="oe_inline" />
                      <field name="surname" class="oe_inline" />
                    </strong>
                    <div t-if="record.phone.value">
                      <t t-esc="record.phone.value" />
                    </div>
                  </div>
                </div>
              </t>
            </templates>
          </kanban>
        </field>
      </record>
  
      <!-- actions opening views on models -->
  
      <record model="ir.actions.act_window" id="shop_app.action_window_employe">
        <field name="name">Employe Window</field>
        <field name="res_model">shop_app.employe_model</field>
        <field name="view_mode">kanban,tree,form</field>
      </record>
  
