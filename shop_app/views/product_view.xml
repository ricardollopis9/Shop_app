<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shop_app.product_model_list">
      <field name="name">Product List</field>
      <field name="model">shop_app.product_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"></field>
          <field name="description"></field>
          <field name="price"></field>
          <field name="stock"></field>
        </tree>
      </field>
    </record>

    <!-- Form definition-->
    <record model="ir.ui.view" id="shop_app.product_model_form">
      <field name="name">Product Form</field>
      <field name="model">shop_app.product_model</field>
      <field name="arch" type="xml">
        <form string="Product">
          <group>
            <field name="name"></field>
            <field name="description"></field>
            <field name="price"></field>
            <field name="stock"></field>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shop_app.action_window_product">
      <field name="name">Product Window</field>
      <field name="res_model">shop_app.product_model</field>
      <field name="view_mode">tree,form</field>
    </record>

